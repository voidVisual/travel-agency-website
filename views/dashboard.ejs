<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Travel Agency</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .booking-card {
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        .booking-card:hover {
            transform: translateY(-5px);
        }
        .status-pending {
            color: #ffc107;
        }
        .status-confirmed {
            color: #28a745;
        }
        .status-cancelled {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Travel Agency</a>
            <div class="navbar-nav ms-auto">
                <span class="nav-item nav-link text-light">Welcome, <%= username %></span>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>Your Bookings</h2>
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <div class="row mt-4">
            <% if (bookings.length === 0) { %>
                <div class="col-12">
                    <p class="text-center">No bookings found. Start planning your next adventure!</p>
                </div>
            <% } else { %>
                <% bookings.forEach(booking => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card booking-card">
                            <div class="card-body">
                                <h5 class="card-title"><%= booking.destination %></h5>
                                <p class="card-text">
                                    <strong>Date:</strong> <%= new Date(booking.booking_date).toLocaleDateString() %><br>
                                    <strong>Status:</strong> 
                                    <span class="status-<%= booking.status.toLowerCase() %>">
                                        <%= booking.status %>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
